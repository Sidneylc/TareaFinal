<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Servicios</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Codigo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Codigo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descripcion)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Precio)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Precio)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CodContratista)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CodContratista)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CodLugar)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CodLugar)
        </dd>

    </dl>

    @using (Ajax.BeginForm("Delete", new { Controller = "Servicio" },
                            new AjaxOptions
                            {
                                HttpMethod = "POST",
                                InsertionMode = InsertionMode.Replace,
                                UpdateTargetId = "modal-body",
                                OnSuccess = "servicio.success('delete');"
                            },
                            htmlAttributes: new { id = "deleteForm" }
                          )
            )
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" />
        </div>
    }
</div>

<script type="text/javascript">
    $(function () {
        $.validator.unobtrusive.parse("#deleteForm");
    });
</script>
